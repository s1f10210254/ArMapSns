datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String   @id
  userId    String
  label     String
  done      Boolean
  createdAt DateTime
}

model User {
  id    String @id
  posts Post[]
}

model Post {
  id        String   @id
  userName  String
  postTime  DateTime @default(now())
  content   String
  latitude  Float
  longitude Float
  likes     Int      @default(0)
  userID    String
  user      User     @relation(fields: [userID], references: [id])
}
